            <TextView
                android:drawablePadding="@dimen/_16pxh"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="Date and Time"
                android:fontFamily="@font/comfortaa"
                android:textColorHint="@color/gray_600"
                app:drawableStartCompat="@drawable/baseline_access_time_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/eve_time_btn"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18pxv"
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_300_radius_12"
                    style="@style/etSolidRoundedOutline"
                    app:backgroundTint="@android:color/transparent"
                    android:textColor="@color/black"
                    android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                    android:text="HH:MM"
                    android:textAllCaps="false" />
                <Button
                    android:id="@+id/eve_date_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_18pxv"
                    android:background="@drawable/rectangle_bg_white_a700_border_gray_300_radius_12"
                    style="@style/etSolidRoundedOutline"
                    app:backgroundTint="@android:color/transparent"
                    android:textColor="@color/black"
                    android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                    android:text="DD/MM/YYYY"
                    android:textAllCaps="false" />
            </LinearLayout>

            <Button
                android:id="@+id/submitNewEventBtn"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_58pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_34pxv" android:layout_width="@dimen/_271pxh"
                android:text="Submit"
                android:textStyle="bold"
                android:textColor="@color/white_A700"
                android:fontFamily="@font/comfortaa"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:drawableEnd="@drawable/img_arrowright"
                android:drawablePadding="@dimen/_8pxh"
                app:backgroundTint="@color/indigo_A200"
                style="@style/groupStyleindigo_A200cornerRadius"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>