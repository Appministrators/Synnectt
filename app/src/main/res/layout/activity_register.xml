    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/whatsapp_image_2023_08_21_at_1_06_2"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:contentDescription="whatsapp_image_2023_08_21_at_1_06_2"
        android:src="@drawable/am_logo"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="264dp"
        android:layout_height="100dp"
        android:src="@drawable/synectt_by_appministers"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/connectree" />


        <TextView
            android:id="@+id/register"
            android:layout_width="193dp"
            android:layout_height="73dp"
            android:layout_below="@id/pic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal|center"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/goToStudReg"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Student"
            android:layout_marginStart="89dp"
            android:layout_below="@id/register"/>

        <Button
            android:id="@+id/goToFacReg"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Sponsor"
            android:layout_marginStart="89dp"
            android:layout_below="@id/goToStudReg"/>

        <Button
            android:id="@+id/goToSponReg"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Faculty"
            android:layout_marginStart="89dp"
            android:layout_below="@id/goToFacReg"/>

        <TextView
            android:id="@+id/loginAlready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/goToSponReg"
            android:text="Already have account? Login Here" />


        <RelativeLayout
            android:id="@+id/frame_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@id/register">

            <ImageView
                android:id="@+id/stud_icon"
                android:layout_width="32dp"
                android:layout_height="38dp"
                android:layout_marginStart="22dp"
                android:contentDescription="stu1_1"
                android:src="@drawable/stud_icon" />


