<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".ui.SplashScreenActivity">
    <!--android:background="@drawable/__bg__landing_page_shape"-->

    <LinearLayout android:gravity="center"
        android:id="@+id/linearFrontpage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <ImageView
            android:gravity="center"
            android:id="@+id/txtSynectt"
            android:layout_height="wrap_content"
            android:layout_width="250dp"
            android:src="@drawable/synectt_by_appministers"/>
        <ImageView android:id="@+id/imageWhatsAppImage"
            android:layout_gravity="center"
            android:layout_height="125dp"
            android:layout_width="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/am_logo"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>