<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ph_auth_dialog_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout android:id="@+id/event_layout_header"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_131pxv"
                android:layout_width="@dimen/_218pxh"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <FrameLayout android:id="@+id/frameStackarmanrokni"
                    android:layout_gravity="start"
                    android:layout_height="match_parent" android:layout_width="match_parent">
                    <ImageView android:id="@+id/imageImageEightyFour"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_131pxh"
                        android:layout_width="@dimen/_218pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_image84"
                        tools:ignore="ContentDescription" />
                    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/linearRowarmanrokni"
                        android:layout_gravity="top|center"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginEnd="@dimen/_8pxh"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_width="match_parent" android:orientation="horizontal">
                        <LinearLayout android:gravity="center_horizontal"
                            android:id="@+id/linearColumnarmanrokni"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@drawable/rectangle_bg_white_a700_b2_radius_10"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView android:gravity="center_horizontal"
                                android:id="@+id/txtArmanrokni"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/_6pxv"
                                android:layout_marginEnd="@dimen/_9pxh"
                                android:layout_marginStart="@dimen/_9pxh"
                                android:layout_marginTop="@dimen/_4pxv"
                                android:layout_width="match_parent"
                                android:lineSpacingExtra="@dimen/_1pxh"
                                android:text="10 June"
                                android:textAllCaps="true"
                                style="@style/txtAirbnbCerealAppmedium14"/>
                        </LinearLayout>
                        <ImageButton
                            android:background="@drawable/rectangle_bg_white_a700_b2_radius_10"
                            android:id="@+id/btnMap"
                            android:layout_height="@dimen/_30pxh"
                            android:layout_marginBottom="@dimen/_15pxv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="@dimen/_30pxh"
                            android:paddingHorizontal="@dimen/_8pxh"
                            android:paddingVertical="@dimen/_8pxv"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_map" tools:ignore="ContentDescription"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </FrameLayout>
            </FrameLayout>

            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/event_layout_title"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_6pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="Event Title"
                app:layout_constraintTop_toBottomOf="@id/event_layout_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/txtAirbnbCerealAppmedium18_1"/>

            <TextView android:ellipsize="end"
                android:id="@+id/event_layout_participants"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_6pxv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_layout_title"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:singleLine="true"
                android:text="100+ Participants"
                style="@style/txtAirbnbCerealAppmedium12"/>

            <LinearLayout android:gravity="start"
                android:id="@+id/location_Wrap"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_6pxv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/event_layout_participants"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageMappin"
                    android:layout_height="@dimen/_14pxh"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/_12pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_mappin"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_mappin"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLanguage"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.93" android:layout_width="0dp"
                    android:singleLine="true"
                    android:text="Event Location"
                    style="@style/txtAirbnbCerealAppbook13" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>